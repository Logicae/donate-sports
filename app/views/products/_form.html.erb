<%= form_for(@product) do |f| %>
    
    <%= f.label :item %>
    <%= f.hidden_field :user_id %>
    <%= f.text_field :product_name %><br>
    <%= f.label :item_description %>
    <%= f.text_field :product_description %><br>

    <%= f.fields_for :sport do |sport| %>
        <ul><strong><%= sport.label :sport %></strong></ul>
        <ul><%= sport.text_field :name %></ul>
    <% end %>
    <%= f.submit %>
<% end %>