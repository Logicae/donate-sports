 <%= form_for @sport do |f| %></ul>
            <ul>
                <strong><%= f.label :sport %></strong>
            </ul>

            <ul>		
                <select name="sport[name]">		
                    <option value="" selected="selected">Please select</option>		
                    <option value="Baseball" >Baseball</option>		
                    <option value="Basketball" >Basketball</option>		
                    <option value="Football" >Football</option>		
                    <option value="Golf" >Golf</option>		
                    <option value="Hockey" >Hockey</option>		
                     <option value="Soccer" >Soccer</option>		
                 </select>		
            </ul>

            <%= f.fields_for :products, @sport.products.build do |products_fields| %>
                <ul><strong><%= f.label :item_name %></strong></ul>
                <ul><%= products_fields.text_field :product_name %></ul>
                <ul><strong><%= f.label :item_description %></strong></ul>
                <ul><%= products_fields.text_area :product_description %></ul>
                <input type="hidden" name="sport[products_attributes][0][user_id]" value="<%= current_user.id %>">
            <% end %>

            <ul><%= f.submit "Submit" %></ul>
<% end %>
