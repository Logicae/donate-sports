<%= form_tag("/sports", method: "get") do %>
    <ul><%= hidden_field_tag "sport", options_from_collection_for_select(Sport.all, "id", "name"), include_blank: false %></ul>
    <ul><%= submit_tag "See which sport has the most donated items!" %></ul>
<% end %>

<% @sort_by_sport.each do |sport|%>
        <ul><%= sport[0]%></ul>
        <ul><%= sport[1]%></ul>
<% end %>